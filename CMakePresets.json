{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Ninja-Host",
            "displayName": "Ninja Host Build",
            "description": "Windows/Linuxホスト用ビルド(Ninjaが必要)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "stm32-cross",
            "displayName": "STM32 (Cross Compile)",
            "description": "STM32CubeCLTを使用してクロスコンパイル",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/stm32",
            "toolchainFile": "${sourceDir}/stm32_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}